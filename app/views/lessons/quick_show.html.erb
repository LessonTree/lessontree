<div class="quick-show"
  <div class="lesson-preview-title-container">
    <h3 class="lesson-preview-title"><%= @lesson.topic %></h3>
    <div class="lesson-preview-description"><%= @lesson.description.html_safe %></div>
  </div>

  <div class="page-headline">Documents</div>

  <div class="page-headline-rule-container">
    <div class="page-headline-rule-first"></div>
    <div class="page-headline-triangle"></div>
  </div>

<div class="quick-created-documents">
  <% @created_documents.each do |d| %>
  <h2><%= d.title %></h2>
  <section class="quick-content">
  <%= d.content.html_safe %>
</section>
  <% end %>
</div>

<div class="quick-uploaded-documents">
<% @uploaded_documents.each do |d| %>
  <% if d.upload_content_type %>
    <h2><%= d.title %></h2>
    <iframe src=<%= d.upload.url %> width="800" height="100%" class="quick-show-iframe"></iframe>
  <% else %>
    <%= link_to "Download #{d.title}" %>
  <% end %>
<% end %>

</div>
</div>
